        android:supportsRtl="true"
        android:theme="@style/Theme.MyRecycleViewHorizonVertical">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Role.Vertical.RecycleVerticalCardMain" />
        <activity android:name=".Role.Horizonal.RecycleHorizontalCardMain" />
        <activity android:name=".Role.ManyGrid.ManyGridCard" />
        <activity android:name=".Role.FlexLayout.RecycleViewFlexManager" />
        <activity android:name=".Role.HardNoGrid.NoGridMain" />
    </application>

</manifest>